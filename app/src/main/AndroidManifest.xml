<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 카메라 권한 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />


    <!-- Activity 등록
    <activity android:name=".SettingProfileActivity" /> -->

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/bilbil_128px"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BilBil"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".SettingProfileActivity"
            tools:ignore="DuplicateActivity" />
        <activity
            android:name=".ProductCreateRequest"
            android:exported="false" />
        <activity
            android:name=".PriceUnitDialogFragment"
            android:exported="false" />
        <activity
            android:name=".NewPostFragment"
            android:exported="false" />
        <activity
            android:name=".NewPostActivity"
            android:exported="false" />
        <activity
            android:name=".SearchResultActivity"
            android:exported="false" />
        <activity
            android:name=".HomeHostActivity"
            android:exported="false" />
        <activity
            android:name=".SettingMapActivity"
            android:exported="false" /> <!-- 🚨 [수정 완료] 카카오 로그인 SDK용 키 -->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="7a3a72c388ba6dfc6df8ca9715f284ff" /> <!-- 🚨 [수정 완료] 카카오 지도 SDK용 키 -->
        <meta-data
            android:name="com.kakao.vectormap.appKey"
            android:value="7a3a72c388ba6dfc6df8ca9715f284ff" />


        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="oauth"
                    android:scheme="kakao7a3a72c388ba6dfc6df8ca9715f284ff" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- FileProvider 설정 (application 태그 안에) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>