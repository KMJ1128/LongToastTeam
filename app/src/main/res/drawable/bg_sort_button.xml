<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 안은 하얀색 -->
    <solid android:color="@android:color/white" />

    <!-- 둥근 모서리 -->
    <corners android:radius="16dp" />

    <!-- 검은색 테두리 -->
    <stroke
        android:width="1dp"
        android:color="@android:color/black" />

    <!-- 살짝 여유 -->
    <padding
        android:left="4dp"
        android:top="2dp"
        android:right="4dp"
        android:bottom="2dp" />
</shape>
