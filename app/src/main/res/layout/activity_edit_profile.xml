<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/trust_background">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="프로필 수정"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/trust_text_primary"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_profile_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="70dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="프로필 사진"
            android:scaleType="centerCrop"
            android:src="@drawable/no_profile" />
    </androidx.cardview.widget.CardView>

    <!-- 카메라 버튼 -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_change_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_camera"
        app:fabSize="normal"
        app:layout_constraintEnd_toEndOf="@id/card_profile_image"
        app:layout_constraintBottom_toBottomOf="@id/card_profile_image"
        android:layout_marginEnd="-8dp"
        android:layout_marginBottom="-8dp"
        app:backgroundTint="#56C8A5"
        app:tint="#D5FFEE"

        android:contentDescription="사진 변경" />

    <TextView
        android:id="@+id/text_nickname_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/trust_text_primary"
        app:layout_constraintTop_toBottomOf="@id/card_profile_image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="4dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:hintEnabled="false"
        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="@color/white"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxStrokeColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/text_nickname_label">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="닉네임을 입력하세요"
            android:textSize="16sp"
            android:padding="16dp"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/text_nickname_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2-20자의 한글, 영문, 숫자를 사용할 수 있어요"
        android:textSize="12sp"
        android:textColor="@color/trust_text_secondary"
        app:layout_constraintTop_toBottomOf="@id/input_layout_nickname"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginStart="4dp"/>

    <TextView
        android:id="@+id/text_location_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="활동 지역"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/trust_text_primary"
        app:layout_constraintTop_toBottomOf="@id/text_nickname_hint"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="4dp"/>

    <LinearLayout
        android:id="@+id/layout_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_edittext_line"
        android:backgroundTint="@color/white"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:paddingVertical="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/text_location_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/text_location_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="위치를 설정하세요."
            android:textSize="16sp"
            android:textColor="@color/trust_text_primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_change_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="변경"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:rippleColor="@color/colorPrimaryVariant"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_save"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="저장"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>