<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trust_surface">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/loginButtonsLayout"
        app:layout_constraintVertical_bias="0.4">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/logo_bilbil"
            android:layout_width="220dp"
            android:layout_height="220dp"
            app:lottie_rawRes="@raw/bilbil_logo_animation"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"/>

        <TextView
            android:id="@+id/textView_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="빌빌에 오신 것을 환영합니다!"
            android:textColor="@color/trust_text_primary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="신뢰로 이어지는 따뜻한 대여를 시작해요"
            android:textColor="@color/trust_text_secondary"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_kakao_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="카카오톡으로 시작하기"
            android:textColor="#3C1E1E"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#FEE500"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_kakao"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@null"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_naver_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="네이버로 시작하기"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#03C75A"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_naver"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@null"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>