<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- ✔ 로고 + 텍스트 묶음: 화면 중앙에 더 가깝게 -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/loginButtonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView_logo"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:src="@drawable/BilBIl_normal"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/textView_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="빌빌에 오신 것을 환영합니다!"
            android:textColor="@color/trust_text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/textView_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="신뢰로 이어지는 따뜻한 대여를 시작해요"
            android:textColor="@color/trust_text_secondary"
            android:textSize="15sp"
            android:layout_gravity="center" />
    </LinearLayout>


    <!-- ✔ 로그인 버튼: 아래 고정 -->
    <LinearLayout
        android:id="@+id/loginButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_kakao_login"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="카카오톡으로 3초 만에 시작"
            android:textAllCaps="false"
            android:textColor="#3C1E1E"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#FEE500"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_kakao"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@android:color/transparent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_naver_login"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="14dp"
            android:text="N 네이버로 간편 로그인"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#03C75A"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_naver"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@android:color/transparent" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
