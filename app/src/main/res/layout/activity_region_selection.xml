<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/trust_surface">

    <TextView
        android:id="@+id/text_region_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="대여 가능 지역을 선택해주세요"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/trust_text_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_region_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="도 → 시/구 → 동 순서로 맞춤 지역을 설정하세요."
        android:textSize="14sp"
        android:textColor="@color/trust_text_secondary"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/text_region_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/region_column_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@id/text_region_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_region_confirm">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_province"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_region_column"
            android:padding="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_region_column"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_town"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_region_column"
            android:padding="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_selection_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="대여 가능 지역을 선택해주세요"
        android:textSize="14sp"
        android:textColor="@color/trust_text_secondary"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/region_column_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_region_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="선택 완료"
        android:textAllCaps="false"
        android:enabled="false"
        android:backgroundTint="@color/trust_primary"
        android:textColor="@android:color/white"
        android:padding="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
