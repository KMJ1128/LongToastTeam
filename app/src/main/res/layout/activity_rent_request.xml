<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trust_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:title="대여 요청"
        app:titleTextColor="@color/trust_text_primary"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/bottom_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대여 물품"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/trust_text_primary"
                android:layout_marginBottom="12dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/image_product_thumbnail"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:background="@color/trust_background"
                        android:src="@drawable/ic_default_category"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/text_product_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="상품 제목"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/trust_text_primary"
                            android:maxLines="1"
                            android:ellipsize="end"/>

                        <TextView
                            android:id="@+id/text_product_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10,000원 / 일"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대여 기간 선택"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/trust_text_primary"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_rounded_white"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_start_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="시작일 선택"
                    android:textSize="16sp"
                    android:textColor="@color/trust_text_secondary"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:textColor="@color/trust_text_secondary"
                    android:paddingHorizontal="16dp"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/text_end_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="반납일 선택"
                    android:textSize="16sp"
                    android:textColor="@color/trust_text_secondary"
                    android:gravity="center"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="거래 방식 선택"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/trust_text_primary"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp"/>

            <RadioGroup
                android:id="@+id/radio_group_delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RadioButton
                    android:id="@+id/radio_direct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="직거래"
                    android:textSize="16sp"
                    android:buttonTint="@color/colorPrimary"
                    android:background="@drawable/bg_rounded_white"
                    android:padding="16dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/trust_text_primary"/>

                <RadioButton
                    android:id="@+id/radio_parcel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="택배 거래"
                    android:textSize="16sp"
                    android:buttonTint="@color/colorPrimary"
                    android:background="@drawable/bg_rounded_white"
                    android:padding="16dp"
                    android:textColor="@color/trust_text_primary"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가 비용 선택"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/trust_text_primary"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp"/>

            <RadioGroup
                android:id="@+id/radio_group_extra_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_extra_none"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="없음"
                    android:textSize="16sp"
                    android:buttonTint="@color/colorPrimary"
                    android:textColor="@color/trust_text_primary"/>

                <RadioButton
                    android:id="@+id/radio_extra_yes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="있음"
                    android:textSize="16sp"
                    android:buttonTint="@color/colorPrimary"
                    android:textColor="@color/trust_text_primary"/>
            </RadioGroup>

            <LinearLayout
                android:id="@+id/layout_extra_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/bg_rounded_white"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <EditText
                    android:id="@+id/input_extra_fee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="금액 입력"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:background="@drawable/rounded_edittext_line"/>

                <TextView
                    android:id="@+id/text_extra_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0원"
                    android:textSize="16sp"
                    android:textColor="@color/trust_text_primary"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="결제 금액"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/trust_text_primary"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_white"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:id="@+id/text_days_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="대여료 (0일)"
                        android:textColor="@color/trust_text_secondary"/>
                    <TextView
                        android:id="@+id/text_rent_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0원"
                        android:textColor="@color/trust_text_primary"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="보증금"
                        android:textColor="@color/trust_text_secondary"/>
                    <TextView
                        android:id="@+id/text_deposit_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0원"
                        android:textColor="@color/trust_text_primary"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/trust_stroke"
                    android:layout_marginVertical="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="총 결제 금액"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/trust_text_primary"/>
                    <TextView
                        android:id="@+id/text_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0원"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit_rent"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_btn_red"
            android:backgroundTint="@color/colorPrimary"
            android:text="대여 요청하기"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>