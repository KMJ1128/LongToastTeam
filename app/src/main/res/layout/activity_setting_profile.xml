<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- 제목 -->
    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="프로필 설정"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- 프로필 사진 영역 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="75dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="프로필 사진"
            android:scaleType="centerCrop"
            android:src="@drawable/no_profile" />
    </androidx.cardview.widget.CardView>

    <!-- 카메라 버튼 (프로필 사진 우측 하단) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_change_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_camera"
        app:fabSize="normal"
        app:layout_constraintEnd_toEndOf="@id/card_profile_image"
        app:layout_constraintBottom_toBottomOf="@id/card_profile_image"
        android:layout_marginEnd="-8dp"
        android:layout_marginBottom="-8dp"
        android:contentDescription="사진 변경" />

    <!-- 닉네임 입력 영역 -->
    <TextView
        android:id="@+id/text_nickname_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/card_profile_image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="48dp" />

    <EditText
        android:id="@+id/edit_nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="닉네임을 입력하세요"
        android:textSize="18sp"
        android:padding="16dp"
        android:background="@android:drawable/edit_text"
        android:inputType="text"
        android:maxLength="20"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/text_nickname_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- 닉네임 안내 텍스트 -->

    <!-- 위치 정보 표시 -->
    <TextView
        android:id="@+id/text_nickname_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="224dp"
        android:layout_marginTop="204dp"
        android:text="2-20자의 한글, 영문, 숫자를 사용할 수 있어요"
        android:textColor="#999999"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_nickname" />

