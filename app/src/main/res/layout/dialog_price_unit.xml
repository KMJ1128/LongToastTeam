<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/trust_surface">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대여 단위 선택"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/trust_text_primary"
        android:layout_marginBottom="20dp"/>

    <RadioGroup
        android:id="@+id/radio_group_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <RadioButton
            android:id="@+id/radio_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="일"
            android:textSize="16sp"
            android:textColor="@color/trust_text_primary"
            android:buttonTint="@color/colorPrimary"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radio_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="월"
            android:textSize="16sp"
            android:textColor="@color/trust_text_primary"
            android:buttonTint="@color/colorPrimary"/>

        <RadioButton
            android:id="@+id/radio_hour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="시간"
            android:textSize="16sp"
            android:textColor="@color/trust_text_primary"
            android:buttonTint="@color/colorPrimary"/>
    </RadioGroup>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxStrokeColor="@color/colorPrimary"
        app:boxStrokeWidth="1dp"
        android:layout_marginBottom="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_price_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="₩ 가격을 입력해주세요"
            android:inputType="numberDecimal"
            android:padding="16dp"
            android:textSize="16sp"
            android:textColor="@color/trust_text_primary"
            android:background="@null"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_confirm_price"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="확인"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/colorPrimary"/>

</LinearLayout>