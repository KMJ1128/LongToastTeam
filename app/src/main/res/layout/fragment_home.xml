                            android:layout_marginBottom="12dp"/>
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none">
                            <com.google.android.material.chip.ChipGroup
                                android:id="@+id/chipGroupPopular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </HorizontalScrollView>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    app:strokeWidth="0dp"
                    android:layout_marginBottom="24dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:text="ì¹´í…Œê³ ë¦¬"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/trust_text_primary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/category_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="3"
                            tools:itemCount="6"
                            tools:listitem="@layout/item_category_grid"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:text="ê·¼ì²˜ ì¸ê¸° ë¬¼ê±´ ðŸ”¥"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/trust_text_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="4dp"/>

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottie_loading"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:lottie_rawRes="@raw/material_loading"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"/>

                <TextView
                    android:id="@+id/text_products_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ë“±ë¡ëœ ìƒí’ˆì´ ì—†ìŠµë‹ˆë‹¤."
                    android:gravity="center"
