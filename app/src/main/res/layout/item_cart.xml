<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="14dp"
    app:cardUseCompatPadding="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <ImageView
            android:id="@+id/image_cart_item"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:background="@drawable/bg_image_placeholder"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/text_cart_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="대여 가능"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/text_cart_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            tools:text="상품 제목입니다"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/trust_text_primary"
            app:layout_constraintStart_toEndOf="@id/image_cart_item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_cart_status"/>

        <TextView
            android:id="@+id/text_cart_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            tools:text="서울 구로구"
            android:textSize="12sp"
            android:textColor="@color/trust_text_secondary"
            app:layout_constraintStart_toEndOf="@id/image_cart_item"
            app:layout_constraintTop_toBottomOf="@id/text_cart_title"
            app:layout_constraintEnd_toStartOf="@id/btn_delete_item"/>

        <TextView
            android:id="@+id/text_cart_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            tools:text="10,000원"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/trust_primary"
            app:layout_constraintStart_toEndOf="@id/image_cart_item"
            app:layout_constraintTop_toBottomOf="@id/text_cart_location"
            app:layout_constraintEnd_toStartOf="@id/btn_delete_item"/>

        <TextView
            android:id="@+id/text_cart_deposit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            tools:text="보증금 5,000원"
            android:textSize="12sp"
            android:textColor="#666666"
            app:layout_constraintStart_toEndOf="@id/image_cart_item"
            app:layout_constraintTop_toBottomOf="@id/text_cart_price"
            app:layout_constraintEnd_toStartOf="@id/btn_delete_item"/>

        <ImageButton
            android:id="@+id/btn_delete_item"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="#CCCCCC"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>