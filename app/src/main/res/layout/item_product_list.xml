<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/image_item_thumbnail"  android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="상품 썸네일" />

    <TextView
        android:id="@+id/text_item_title" android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_item_thumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="접이식 캠핑 의자 판매합니다." />

    <TextView
        android:id="@+id/text_item_location" android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="#666666"
        app:layout_constraintStart_toEndOf="@id/image_item_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/text_item_title"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="서울 구로구 오류동" />

    <TextView
        android:id="@+id/text_item_price" android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        app:layout_constraintStart_toEndOf="@id/image_item_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/text_item_location"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="₩ 5,000 / 일" />

    <TextView
        android:id="@+id/text_item_status" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/badge_background"
        android:text="대여중"
        android:textColor="@android:color/white"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_item_title"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>