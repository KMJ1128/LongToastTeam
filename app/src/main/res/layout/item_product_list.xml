<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="14dp"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- 상품 이미지 -->
        <ImageView
            android:id="@+id/image_item_thumbnail"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:background="@drawable/bg_image_placeholder"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_category"
            android:contentDescription="상품 썸네일"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- 상태 뱃지 -->
        <TextView
            android:id="@+id/text_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:text="대여중"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingStart="8dp"
            android:paddingTop="3dp"
            android:paddingEnd="8dp"
            android:paddingBottom="3dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible" />

        <!-- 제목 (뱃지를 침범하지 않도록 End를 status 왼쪽에 연결) -->
        <TextView
            android:id="@+id/text_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="6dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/trust_text_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_item_thumbnail"
            app:layout_constraintEnd_toStartOf="@id/text_item_status"
            tools:text="접이식 캠핑 의자 대여합니다" />

        <!-- 주소 -->
        <TextView
            android:id="@+id/text_item_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:textColor="@color/trust_text_secondary"
            app:layout_constraintStart_toEndOf="@id/image_item_thumbnail"
            app:layout_constraintTop_toBottomOf="@id/text_item_title"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="서울 구로구 오류동" />

        <!-- 가격 -->
        <TextView
            android:id="@+id/text_item_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/trust_primary"
            app:layout_constraintStart_toEndOf="@id/image_item_thumbnail"
            app:layout_constraintTop_toBottomOf="@id/text_item_location"
            app:layout_constraintEnd_toStartOf="@id/layout_item_actions"
            tools:text="₩ 5,000 / 일" />

        <LinearLayout
            android:id="@+id/layout_item_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_item_price"
            app:layout_constraintBottom_toBottomOf="@id/text_item_price">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_write_review"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰쓰기"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:visibility="gone"
                app:strokeWidth="1dp"
                app:strokeColor="@color/trust_primary"
                android:textColor="@color/trust_primary"
                android:backgroundTint="@android:color/transparent"
                app:cornerRadius="999dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_item"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete_item"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="삭제"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:textColor="@color/trust_primary" />
        </LinearLayout>

        <!-- 새로 추가: 보증금 전용 TextView -->
        <TextView
            android:id="@+id/text_item_deposit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            android:textColor="@color/trust_text_secondary"
            app:layout_constraintStart_toEndOf="@id/image_item_thumbnail"
            app:layout_constraintTop_toBottomOf="@id/text_item_price"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="₩ 40,000 / 보증금" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
