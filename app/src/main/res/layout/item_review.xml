<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/border_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_review_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="닉네임"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/text_review_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-11-28"
            android:textSize="12sp"
            android:textColor="#888888"/>
    </LinearLayout>

    <RatingBar
        android:id="@+id/rating_review_item"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="5"
        android:isIndicator="true"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/text_review_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="물품명"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/text_review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="리뷰 내용입니다."
        android:textSize="14sp"
        android:textColor="#333333"/>

</LinearLayout>