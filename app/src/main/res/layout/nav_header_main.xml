<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/colorPrimary"
    android:padding="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="90dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39"
        app:strokeWidth="2dp">

        <ImageView
            android:id="@+id/nav_header_profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="프로필 사진"
            android:scaleType="centerCrop"
            android:src="@drawable/no_profile" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nav_header_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="닉네임"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/card_profile"
        app:layout_constraintTop_toTopOf="@+id/card_profile"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/nav_header_credit_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신용 720점"
        android:textColor="#E0F2F1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/card_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nav_header_nickname"
        app:layout_constraintTop_toBottomOf="@+id/nav_header_nickname"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/nav_header_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="활동지역 미설정"
        android:textColor="#B2DFDB"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_profile"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>